>
  <main class="relative min-h-screen bg-mesh">
    <div class="fixed inset-0 bg-grid-pattern pointer-events-none" aria-hidden="true" />

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 py-6 sm:py-10 lg:px-10 pt-[env(safe-area-inset-top)]">
      <!-- Hero -->
      <section class="mb-10 sm:mb-12 flex flex-col sm:flex-row sm:items-start gap-6 animate-in-up animate-delay-1">
